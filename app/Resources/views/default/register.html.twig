{% extends 'base.html.twig' %}

{% block body %}

	<div class="col-md-6 col-md-offset-3 register-div">
        <div class="formulaire">
            {{ form_start(form, {'method': 'post', 'action': path('user_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                <div class="col-md-12 ecart pad">
                    <h3 class="register-title"> Cr√©er Ton Compte </h3>
                </div>
                <div class="col-md-12 register-form ecart ">
                    <div class="col-md-6">
                        <p class="appel">Pseudo :</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.username) }}
                        {{ form_errors(form.username) }}
                    </div>
                </div>

        	<div class="col-md-12 register-form ecart">
                <div class="col-md-6 ">
                    <p class="appel">Adresse E-mail :</p>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="col-md-12 register-form ecart">
                <div class="col-md-6">
                    <p class="appel">Mot de passe :</p>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.plainPassword.first) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>

            <div class="col-md-12 register-form ecart">
                <div class="col-md-6">
                    <p class="appel">Confirmation :</p>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.plainPassword.second) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
            <div class="col-md-12 register-but">
                <div class="col-md-5"></div>
                <div class="col-md-4 ">
                    <input class="btn btn-success btnregi" type="submit" value="{{ 'Envoyer'|trans }}" />
                </div>
                <div class="col-md-3"></div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}