{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-3"></div>
<div class="col-md-6 modif-profil-div">
	<h2 class="modif-title">Modifier Les Informations Profil</h2>
	<form action="{{ path("profil_modif") }}" method="post">
            <div class="col-md-12">
                <div class="col-md-6 modif-label">
                    <label class="label-name" for="nom">Pr√©nom :</label>
                </div>
                <div class="col-md-6">
                    <input type="string" id="nom" name="nom" value="{{ user.nom }}"/>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6 modif-label">
                    <label class="label-name" for="ville">Ville :</label>
                </div>
                <div class="col-md-6">
                    <input type="string" id="ville" name="ville" value="{{ user.ville }}"/>
                </div>
            <div class="col-md-12">
                <div class="col-md-6 modif-label">
                    <label class="label-name" for="sexe">Genre :</label>
                </div>
                <div class="col-md-6">
                    <select class="choice-gender" name="sexe" id="sexe">
                        {% if user.sexe == "homme" %}
                            <option class="choice-gender" selected value="homme">Homme</option>
                            <option class="choice-gender" value="femme">Femme</option>
                        {% else %}
                            <option class="choice-gender" value="homme">Homme</option>
                            <option class="choice-gender" selected value="femme">Femme</option>
                        {% endif %}
                    </select>
                </div>
            </div>
            <div class="col-md-12">
                <input type="hidden" name="hidden" value="1"/>
            </div>
            <div class="col-md-12 btn-div-modifprofil">
                <div class="col-md-3">
                    <input type="submit" class="btn btn-danger" id="_submit" name="submit" value="Envoyer" />
                </div>
                <div class="col-md-6"></div>
                <div class="col-md-3 return">
                    <a class="btn btn-danger" href="{{ path ("profil") }}">Retour</a>
                </div>
            </div>
        </form>
</div>
<div class="col-md-3"></div>

{% endblock %}