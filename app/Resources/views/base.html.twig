<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- CSS LINK -->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">

        <!-- JS LINK -->
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}" ></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}" ></script>

        <!-- FONT LINK -->
        <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <!-- Fixed navbar -->
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <nav class="navbar navbar-default navbar-fixed-top">
                  <div class="container">
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                      <img class="img-responsive ico-nav" src="{{ asset('img/ico.jpg')}}"/>
                      <a class="navbar-brand" href="{{ path('dashboard') }}">
                        Wild-Building
                      </a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                      <ul class="nav navbar-nav navbar-right">
                        <li><a class="nav-link" href="{{ path('dashboard') }}">Acceuil</a></li>
                        <li><a class="nav-link" href="#">Jouer</a></li>
                        <li><a class="nav-link" href="{{ path('profil') }}">Profil</a></li>
                        <li><a class="nav-link" href="{{ path('fos_user_security_logout') }}">Deconnexion<span class="sr-only">(current)</span></a></li>
                      </ul>
                    </div><!--/.nav-collapse -->
                  </div>
                </nav>
            {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
